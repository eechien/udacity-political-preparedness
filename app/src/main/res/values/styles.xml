<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
    </style>

    <style name="headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/headline_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
    </style>

    <style name="subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/subhead_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
